<h1>Admin::Customers#edit</h1>

<div class="container">
  <h2><span class="mgr-10"><%= @customer.last_name %> </span><%= @customer.first_name %>さんの会員情報編集</h2>
<br>
<br>

<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
  <% if @customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= @customer.errors.count %>errors prohibited this customer from being saved:</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<br>

  <div class="row">
    <div class="col-sm-3">
      <h5>会員ID</h5>
    </div>
    <div class="col-sm-5">
      <h5><%= @customer.id %></h5>
    </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>氏名</h5>
    </div>
    <div class="col-sm-2">
      <h5><%= f.text_field :last_name, autofocus: true, placeholder: "姓", autocomplete: "family-name" %></h5>
    </div>
    <div class="col-sm-1"></div>
      <div class="col-sm-2">
        <h5><%= f.text_field :first_name, autofocus: true, placeholder: "名", autocomplete: "given-name" %><br /></h5>
      </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>フリガナ</h5>
    </div>
    <div class="col-sm-2">
      <h5><%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %></h5>
    </div>
    <div class="col-sm-1"></div>
      <div class="col-sm-2">
        <h5><%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %><br /></h5>
      </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>郵便番号</h5>
    </div>
    <div class="col-sm-5">
      <h5><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000",autocomplete: "postal_code" %><br /></h5>
    </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>住所</h5>
    </div>
    <div class="col-sm-5">
      <h5><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address", size: "50" %><br /></h5>
    </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>電話番号</h5>
    </div>
    <div class="col-sm-5">
      <h5><%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", autocomplete: "tel" %><br /></h5>
    </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
      <h5>メールアドレス</h5>
    </div>
    <div class="col-sm-5">
      <h5><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" , size: "30" %><br /></h5>
    </div>
  </div>
<br>

  <div class="form-group row">
    <div class="col-sm-3">
    <h5>会員ステータス</h5>
    </div>
    <div class="col-sm-5 btn-group" data-toggle="buttons">
      <label class="btn btn-outline-primary" style="width:50%">
        <h5><%= f.radio_button :is_active, 1, {checked: true} %>有効</h5>
      </label>
      <label class="btn btn-outline-danger" style="width:50%">
        <h5><%= f.radio_button :is_active, 0, {} %>退会</h5>
      </label>
    </div>
  </div>
<br>
<br>

  <div class="form-group row">
    <div class="col-sm-3"></div>
    <div class="col-sm-5">
      <%= f.submit '　変更を保存　', class: "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
<% end %>
</div>
<br>
<br>
<br>