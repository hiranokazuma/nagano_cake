<h1>Admin::Customers#index</h1>

<div class="container">
  <h2>会員一覧</h2>
</div>
<br>

<div class="container mt-5">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_active %>
            <b class="text-success">有効</b>
            <% else %>
            退会
            <% end %>
        </td>
      </tr>
      <% end %>
      <%= paginate @customers %>
    </tbody>
  </table>
</div>