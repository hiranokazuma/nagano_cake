<h1>Admin::Genres#index</h1>

<div class="container">
<h2>ジャンル一覧・追加</h2>
<br>
    <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h3><%= @genre.errors.count %>errors prohibited this genre from being saved:</h3>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="row">
  <%= form_with model: @genre, url: admin_genres_path, class: "form-inline" do |f| %>
    <div class="form-group mx-4 h5">
      <label for="genre_name">ジャンル名</label>
    </div>
    <div class="form-group mr-5">
      <%= f.text_field :name, class: "form-control", autocomplete: 'off'%>
    </div>
    <div class="form-group ml-2">
      <%= f.submit '　新規登録　', class: "btn btn-success btn-lg"%>
    </div>
  <% end %>
  </div>
<br>
  <div class="row">
    <div class="col-6">
    <table class="table table-bordered">
      <thead class="h5 table-secondary">
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr class="h5">
          <td class="align-middle"><%= genre.name %></td>
          <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success text-light btn-lg" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
<br>