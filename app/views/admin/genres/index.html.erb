<h1>Admin::Genres#index</h1>

<div class="container">
<h2>ジャンル一覧・追加</h2>
<br>
  <div class="container mt-3">

      <%= form_with model: @genre, url: admin_genres_path, class: "form-inline" do |f| %>
        <% if @genre.errors.any? %>
        <div id="error_explanation">
          <h2><%= @genre.errors.count %>errors prohibited this genre from being saved:</h2>
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group mr-5">
          <label for="genre_name">ジャンル名</label>
        </div>
        <div class="form-group mr-5">
          <%= f.text_field :name, class: "form-control", autocomplete: 'off'%>
        </div>
          <%= f.submit '　新規登録　', class: "btn btn-success btn-lg"%>
      <% end %>

  </div>
</div>
<div class="container mt-5">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(:id), class: "btn btn-success text-light btn-lg" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>