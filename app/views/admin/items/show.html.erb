<h1>Admin::Items#show</h1>

<div class="container">
  <h2>商品詳細</h2>
  <br>
</div>

<div class="container">
      <div class="row">
        <div class="col-sm-2">
        <label for="item_image">商品画像</label>
        </div>
        <div class="col-sm-5">
        <%= image_tag (@item), size: "320x240" %>
        </div>
      </div>
    <br>
</div>

<div class="container">
      <div class="row">
        <div class="col-sm-2">
        <label for="item_name">商品名</label>
        </div>
        <div class="col-sm-5">
          <%= @item.name %>
        </div>
      </div>
    <br>

      <div class="row">
        <div class="col-sm-2">
        <label for="item_introduction">商品説明</label>
        </div>
        <div class="col-sm-5">
          <%= @item.introduction %>
        </div>
      </div>
    <br>

      <div class="row">
        <div class="col-sm-2">
        <label for="genre_name">ジャンル名</label>
        </div>
        <div class="col-sm-5">
          <%= @item.genre.name %>
        </div>
      </div>
    <br>

      <div class="row">
        <div class="col-sm-2">
        <label for="item_price">税抜価格</label>
        </div>
        <div class="col-sm-5">
        　<%= @item.price %>円
        </div>
      </div>
    <br>

      <div class="row">
        <div class="col-sm-2">
        <label for="item_is_active">販売ステータス</label>
        </div>
        <div class="col-sm-5">
          <% if @item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </div>
      </div>
    <br>

      <div class="row">
        <div class="col-sm-2">
          </div>
        <div class="col-sm-5">
          <%= link_to "　編集する　", edit_admin_item_path(@item), class: "btn btn-success text-light btn-lg" %>
        </div>
      </div>
    <br>

</div>