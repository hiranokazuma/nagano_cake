<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>
    <h2>商品新規登録</h2>
    <br>
    <div class="container">

    <%= form_with model: @item do |f| %>
      <div class="row">
        <div class="form-group">
          <div class=”col-sm”>
          <label for="item_image">商品画像</label>
          </div>
          <div class=”col-sm”>
          <%= f.file_field :item_image, class: "form-control-file item_image", placeholder: "商品画像", accept: "image/*" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name, class: "form-control item_name", size: 40 %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_area :introduction, class: "form-control item_introduction", size: "42x10" %>
        </div>
      </div>
    <% end %>
    </div>