<h1>Public::Orders#index</h1>
<div class="container">
<h2>注文履歴一覧</h2>
<br>
  <table class="table table-bordered">
    <thead>
      <tr class="h5 table-secondary">
        <th style="width: 12%">注文日</th>
        <th style="width: 30%">配送先</th>
        <th style="width: 20%">注文商品</th>
        <th style="width: 10%">支払金額</th>
        <th style="width: 15%">ステータス</th>
        <th style="width: 13%">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="h5">
        <td class="align-middle"><%= order.created_at.to_s(:date_jp) %></td>
        <td class="align-middle">〒<%= order.postal_code %><%= order.address %><br><%= order.name %></td>
        <td class="align-middle">
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
          <% end %>
        </td>
        <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
        <td class="align-middle"><%= order.status_i18n %></td>
        <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary text-light btn-lg" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>


