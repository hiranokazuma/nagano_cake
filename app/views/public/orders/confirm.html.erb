<h1>Public::Orders#confirm</h1>
<p>Find me in app/views/public/orders/confirm.html.erb</p>
<div class="container">
<h2>注文情報確認</h2>
<br>
<br>
  <div class="row">
  <div class="col-9">
  <table class="table table-bordered">
    <thead>
      <tr class="h5 table-secondary">
        <th style="width: 30%">商品名</th>
        <th style="width: 15%">単価(税込)</th>
        <th style="width: 20%">数量</th>
        <th style="width: 15%">小計(税込)</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr class="h5">
        <td>
          <% if cart_item.item.image.attached? %>
            <%= link_to item_path(cart_item.item) do %>
            <%= image_tag cart_item.item.image, size: "100x80" %>
            <% end %>
          <% else %>
            <%= image_tag 'default-image', size: "100x80" %>
          <% end %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %>円</td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %>円</td>
          <% @total_payment += cart_item.subtotal %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
    <div class="col-3">
      <table class="table table-bordered">
        <thead>
        </thead>
        <tbody>
          <tr class="h5">
            <td class="table-secondary font-weight-bold">送料</td>
            <td><%= @order.shipping_cost %>円</td>
          </tr>
          <tr class="h5">
            <td class="table-secondary font-weight-bold">商品合計</td>
            <td><%= @total_payment %>円</td>
          </tr>
          <tr class="h5">
            <td class="table-secondary font-weight-bold">請求金額</td>
            <td><%= @total_payment += @order.shipping_cost %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  <br>
  </div>
  <br>
  <div class="row">
    <div class="col-2">
      <div class="font-weight-bold h4">支払方法</div>
    </div>
    <div class="col-10 h5">
      <%= Order.payment_methods_i18n[:credit_card] %>
    </div>
  <br>
  <br>
  <br>
  <br>
    <div class="col-2">
      <div class="font-weight-bold h4">お届け先</div>
    </div>

  </div>
</div>