<div class="container">

<h2>新規会員登録</h2>
</br>
<%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_name">氏名</label>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :last_name, autofocus: true, placeholder: "姓", autocomplete: "family-name" %>
    </div>
    <div class="col-sm-1"></div>
      <div class="col-sm-2">
      <%= f.text_field :first_name, autofocus: true, placeholder: "名", autocomplete: "given-name" %><br />
      </div>
    </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_name_kana">フリガナ</label>
    </div>
    <div class="col-sm-2">
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %>
    </div>
    <div class="col-sm-1"></div>
      <div class="col-sm-2">
      <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %><br />
      </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_email">メールアドレス</label>
    </div>
    <div class="col-sm-2">
    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" , size: "30" %><br />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_postal_code">郵便番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-2">
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000",autocomplete: "postal_code" %><br />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_address">住所</label>
    </div>
    <div class="col-sm-2">
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address", size: "40" %><br />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_telephone_number">電話番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-2">
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", autocomplete: "tel" %><br />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_password">パスワード</label>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    </div>
    <div class="col-sm-2">
    <%= f.password_field :password, autocomplete: "new-password" %><br />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label for="customer_password_confirmation">パスワード(確認用)</label>
    </div>
    <div class="col-sm-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
    </div>
  </div>
</br>

  <div class="form-group row">
    <div class="actions col-5 mx-auto">
      <%= f.submit "　新規登録　", class: "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
</br>

<% end %>
<h3>既に登録済みの方</h3>
</br>
  <div class="form-group row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-5">
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>
</div>
</br>