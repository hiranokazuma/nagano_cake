<h1>Public::Items#show</h1>
<p>Find me in app/views/public/items/show.html.erb</p>
<%= form_with model: @item, url: item_path(@item) do |f| %>
  <% if @item.errors.any? %>
  <div id="error_explanation">
    <h2><%= @item.errors.count %>errors prohibited this item from being saved:</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<% end %>
<div class="container">
  <br>
    <div class="row">
      <div class="col-sm-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "320x260" %>
      <% else %>
        <%= image_tag 'default-image', size: "200x200" %>
      <% end %>
      </div>

      <div class="col-sm-8">
        <div class="row">
            <h2><b><%= @item.name %></b></h2>
        </div>
      <br>
        <div class="row">
            <h5><%= @item.introduction %></h5>
        </div>
      <br>
      <br>
      <br>
        <div class="row">
            <h3><%= (@item.price * 1.1).floor %>円(税込)</h3>
        </div>
      <br>
        <div class="row">
          <div class="col-sm-3">
          <%= form_with model: @cart_items, url: cart_items_path do |f| %>
            <%= f.hidden_field :name, :value => @item.name %>
            <%= f.select :amount, [["１個", "1"], ["２個", "2"], ["３個", "3"], ["４個", "4"], ["５個", "5"], ["６個", "6"], ["７個", "7"], ["８個", "8"], ["９個", "9"], ["１０個", "10"]], include_blank: "個数を選択して下さい"%>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-4">
          <%= f.submit '　カートに入れる　', class: "btn btn-success btn-lg btn-block"%>
          <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
<br>
<br>