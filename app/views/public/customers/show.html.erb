<h1>Public::Customers#show</h1>
  <br>
  <div class="container">
    <h2>マイページ</h2>
  <br>
  <div class="row">
    <div class="col-sm-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-sm-2"></div>
      <div>
        <%= link_to "　編集する　", customers_information_edit_path(@customer), class: "btn btn-success text-light btn-lg" %>
      </div>
    <br>
    <br>
    <div class="col-sm-8">
      <br>
    </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tbody>
              <tr><th width="25%">氏名</th><td width="75%"><%= @customer.full_name %></td></tr>
              <tr><th>カナ</th><td><%= @customer.full_name_kana %></td></tr>
              <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
              <tr><th>住所</th><td><%= @customer.address %></td></tr>
              <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
              <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
              <th colspan="3"></th>
            </tbody>
        </thead>
      </table>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <h3>配送先</h3>
    </div>
    <div class="col-sm-2"></div>
      <div>
        <%= link_to "　一覧を見る　", addresses_path, class: "btn btn-primary text-light btn-lg" %>
      </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-2">
      <h3>注文履歴</h3>
    </div>
    <div class="col-sm-2"></div>
      <div>
        <%= link_to "　一覧を見る　", orders_path, class: "btn btn-primary text-light btn-lg" %>
      </div>
  </div>
  </div>
    <br>
</div>